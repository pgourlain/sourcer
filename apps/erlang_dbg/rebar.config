{require_otp_vsn, "20.*"}.

{erl_opts, [
    warn_deprecated_function,
    warn_export_all,
    warn_export_vars,
    warn_obsolete_guard,
    warn_shadow_vars,
    warn_unused_function,
    warn_unused_import,
    warn_unused_record,
    warn_unused_vars,

    nowarnings_as_errors
    %warnings_as_errors
]}.

{deps, [
    dbg_server
]}.


{plugins, [
        rebar_covertool
    ]}.

{escript_main_app, erlang_dbg}.
{escript_comment, "%% v0.1.0\n"}.

{provider_hooks, [{post, [{compile, escriptize}]}]}.